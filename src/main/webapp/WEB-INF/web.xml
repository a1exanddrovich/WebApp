<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>file-upload</param-name>
    <param-value>D:\Java Work\WebApp\src\main\webapp\images\photos</param-value>
  </context-param>
  <filter>
    <filter-name>changeLanguage</filter-name>
    <filter-class>com.epam.web.filter.LanguageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>changeLanguage</filter-name>
    <servlet-name>main</servlet-name>
  </filter-mapping>
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>com.epam.web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
</web-app>
